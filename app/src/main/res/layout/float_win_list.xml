<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="false"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/dialog_backgroundblack">
    <TextView
        android:id="@+id/display_title"
        android:textSize="12sp"
        android:text="CPU"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/colorLayoutBackground"
        android:layout_width="60dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/display_content"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="false"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorLayoutBackground"
        android:text="sdsdsds"
        android:maxLines="2"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/display_trigger"
        android:layout_height="wrap_content"
        android:layout_width="40dp"
        android:gravity="center"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorStatusGreen"
        android:text="清零"
        android:maxLines="2"
        android:textSize="13.5sp"
        />

</LinearLayout>
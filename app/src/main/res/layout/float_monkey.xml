<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ImageView
        android:id="@+id/floatIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/monkey" />

    <LinearLayout
        android:id="@+id/float_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:adjustViewBounds="false"
        android:background="@drawable/dialog_background"
        android:minWidth="240dp"
        android:padding="2dp">

        <RelativeLayout
            android:id="@+id/float_head"
            android:layout_width="424dp"
            android:layout_height="62dp"
            android:layout_alignBottom="@+id/float_card"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/float_card_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:src="@drawable/monkey" />


            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="100dp"
                android:scaleType="centerInside"
                android:src="@drawable/close_icon"
                android:tint="@color/colorAccent" />

            <ImageView
                android:id="@+id/recordIcon"
                android:layout_width="46dp"
                android:layout_height="58dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@id/closeIcon"
                android:scaleType="centerCrop"
                android:src="@drawable/start" />


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>